@model IEnumerable<Lista_Contato.Models.Contato>

@{
    ViewBag.Title = "Lista de contato";
}

<h2>Lista de contato</h2>

<p>
    @Html.ActionLink("Novo Contato", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>Telefone</th>
        <th>E-mail</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone.FirstOrDefault().Numero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email.FirstOrDefault().Email1)
        </td>
        <td>
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id, type = "Normal"}) |
            @Html.ActionLink("Apagar", "DeleteContato" , new { id = item.Id }, new { onclick = "return confirm('Deseja deletar esse Contato mesmo?');" })
        </td>
    </tr>
}

</table>
